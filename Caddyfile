healthymentoring.com {

    # Serve MEDIA files (profile pictures, uploads)
    handle_path /media/* {
        root * /app/media
        file_server
    }

    # Serve STATIC files (CSS, JS, images)
    handle_path /static/* {
        root * /srv/static
        file_server
    }

    # Everything else goes to Django
    reverse_proxy web:8000
}

n8n.healthymentoring.com {
    reverse_proxy n8n:5678
}

ai.healthymentoring.com {
    reverse_proxy openwebui:8080
}
